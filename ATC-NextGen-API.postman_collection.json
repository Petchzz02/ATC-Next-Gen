{
  "info": {
    "_postman_id": "atc-nextgen-api-2025",
    "name": "ATC Next Gen API",
    "description": "Online Shop Management System API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "JWT_TOKEN",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Status Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/status",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "status"]
        },
        "description": "Check if API server is running and get uptime information"
      },
      "response": []
    },
    {
      "name": "2. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\",\n    \"role\": \"admin\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{BASE_URL}}/api/register",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "register"]
        },
        "description": "Register a new user account"
      },
      "response": []
    },
    {
      "name": "3. Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{BASE_URL}}/api/login",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "login"]
        },
        "description": "Login and receive JWT token (automatically saved to JWT_TOKEN variable)"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Extract token from response",
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('JWT_TOKEN', response.token);",
              "    console.log('Token saved:', response.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "4. Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Mechanical Keyboard\",\n    \"price\": 1590,\n    \"stock\": 50,\n    \"description\": \"Gaming mechanical keyboard with RGB lighting\",\n    \"category\": \"Electronics\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{BASE_URL}}/api/products",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products"]
        },
        "description": "Create a new product (requires JWT token)"
      },
      "response": []
    },
    {
      "name": "5. Get All Products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/products",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products"]
        },
        "description": "Get all products (requires JWT token)"
      },
      "response": []
    },
    {
      "name": "6. Get Product by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/products/1",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products", "1"]
        },
        "description": "Get a specific product by ID"
      },
      "response": []
    },
    {
      "name": "7. Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Keyboard\",\n    \"price\": 1790,\n    \"stock\": 45\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{BASE_URL}}/api/products/1",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products", "1"]
        },
        "description": "Update product information"
      },
      "response": []
    },
    {
      "name": "8. Get Low Stock Products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/products/low-stock",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products", "low-stock"]
        },
        "description": "Get products with stock less than 10"
      },
      "response": []
    },
    {
      "name": "9. Get Total Value",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/products/total-value",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products", "total-value"]
        },
        "description": "Calculate total value of all products in inventory"
      },
      "response": []
    },
    {
      "name": "10. Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/products/1",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "products", "1"]
        },
        "description": "Delete a product by ID"
      },
      "response": []
    }
  ]
}